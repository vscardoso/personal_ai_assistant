# =============================================================================
# PERSONAL AI ASSISTANT - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and configure your actual credentials

# Application Settings
APP_NAME=Personal AI Assistant
VERSION=1.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8000

# Database Configuration (SQLite default for development)
DATABASE_URL=sqlite:///./personal_assistant.db

# For PostgreSQL (production):
# DATABASE_URL=postgresql://username:password@localhost:5432/personal_assistant
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=personal_assistant
# DB_USER=your_username
# DB_PASSWORD=your_password

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=1000
OPENAI_TEMPERATURE=0.7

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# AI Analysis Settings
PERSONALITY_ANALYSIS_MIN_LENGTH=50
RESPONSE_SUGGESTIONS_COUNT=3
CONFIDENCE_THRESHOLD=0.6

# Security (for future authentication features)
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256

# Rate Limiting (requests per minute)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# SMTP / Email (configure these to enable transactional emails)
# Example for a TLS SMTP server (SendGrid, Postmark, Amazon SES SMTP interface, etc.)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_USE_TLS=true
FROM_EMAIL=no-reply@yourdomain.com